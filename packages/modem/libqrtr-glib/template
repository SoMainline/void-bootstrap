# Template file for 'libqrtr-glib'
pkgname=libqrtr-glib
version=1.3.0+git20221127
revision=1
_commit=756ff802fe9b7e7da8061caefb490d898c0cfe71
build_style=meson
build_helper="gir"
hostmakedepends="pkg-config"
makedepends="glib-devel"
short_desc="Qualcomm IPC Router protocol helper library (git ${_commit:0:7})"
maintainer="Jami Kettunen <jami.kettunen@somainline.org>"
license="LGPL-2.1-or-later"
homepage="https://gitlab.freedesktop.org/mobile-broadband/libqrtr-glib"
changelog="https://gitlab.freedesktop.org/mobile-broadband/libqrtr-glib/-/raw/main/NEWS"
distfiles="https://gitlab.freedesktop.org/mobile-broadband/libqrtr-glib/-/archive/${_commit}.tar.gz"
checksum=9486e5e7113a8b8a62ed2d82970bd5465e7efa38b424778e157225e98b7042fb

build_options="gir"
build_options_default="gir"

libqrtr-glib-devel_package() {
	depends="${sourcepkg}-${version}_${revision} ${makedepends}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
		if [ "$build_option_gir" ]; then
			vmove usr/share/gir-1.0
		fi
	}
}
